# ui/kv/main_screen.kv

#: import NoTransition kivy.uix.screenmanager.NoTransition

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'

        MDScreenManager:
            id: screen_manager
            transition: NoTransition()

            HomeScreen:
                name: 'home'
            TasksScreen:
                name: 'tasks'
            RatingScreen:
                name: 'rating'
            NotificationsScreen:
                name: 'notifications'
            ChatScreen:
                name: 'chat'
            CalendarScreen:
                name: 'calendar'

        MDBottomNavigation:
            size_hint_y: 0.1
            text_color_normal: "lightgrey"
            text_color_active: 0.133, 0.439, 0.702, 1
            selected_color_background: 1, 1, 1, 1
            panel_color: 0.043, 0.173, 0.282, 1.0
            radius: [10, 10, 0, 0]
            use_text: False

            MDBottomNavigationItem:
                name: 'home'
                icon: 'home'
                on_tab_press: root.ids.screen_manager.current = 'home'
            MDBottomNavigationItem:
                name: 'tasks'
                icon: 'book-open-page-variant'
                on_tab_press: root.ids.screen_manager.current = 'tasks'
            MDBottomNavigationItem:
                name: 'notifications'
                icon: 'bell'
                on_tab_press: root.ids.screen_manager.current = 'notifications'
            MDBottomNavigationItem:
                name: 'rating'
                icon: 'chart-bell-curve-cumulative'
                on_tab_press: root.ids.screen_manager.current = 'rating'
            MDBottomNavigationItem:
                name: 'chat'
                icon: 'pencil'
                on_tab_press: root.ids.screen_manager.current = 'chat'