<Command>
    size_hint_y: None
    pos_hint: {"right": .98}
    height: self.texture_size[1]
    padding: 12, 10
    theme_text_color: "Custom"
    canvas.before:
        Color:
            rgba: (200/255, 255/255, 200/255, 1)
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [23, 23, 0, 23]
<Response>
    size_hint_y: None
    pos_hint: {"x": .02}
    height: self.texture_size[1]
    padding: 12, 10
    canvas.before:
        Color:
            rgba: 173/255, 216/255, 230/255, 1
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [23, 23, 23, 0]
<ResponseImage>
    size_hint_x: .7
    size_hint_y: None
    height: 200
    allow_stretch: True
    pos_hint: {"x": .02}
    canvas.before:
        Color:
            rgba: 173/255, 216/255, 230/255, 1
        RoundedRectangle:
            size: self.width, self.height
            pos: self.pos
            radius: [23, 23, 23, 0]

<ChatScreen>:
    name: 'chat'
    MDScreen:
        text_input: text_input
        chat_list: chat_list
        name: "chats"
        MDFloatLayout:
            md_bg_color: 28/255, 140/255, 140/255, 1
            MDFloatLayout:
                md_bg_color: 28/255, 140/255, 140/255, 1
                size_hint_y: .11
                pos_hint: {"center_y": .95}
                MDLabel:
                    id: bot_name
                    text: "Твій помічник"
                    pos_hint: {"center_y": .5}
                    halign: "center"
                    font_name: "BPoppins"
                    font_size: "35sp"
                    theme_text_color: "Custom"
                    text_color: 53/255, 56/255, 60/255, 1
            ScrollView:
                size_hint_y: .77
                pos_hint: {"x": 0, "y": .116}
                do_scroll_x: False
                do_scroll_y: True
                BoxLayout:
                    id: chat_list
                    orientation: 'vertical'
                    size: (root.width, root.height)
                    height: self.minimum_height
                    size_hint: None, None
                    pos_hint: {'top': 10}
                    cols: 1
                    spacing: 5
            MDFloatLayout:
                md_bg_color: 18/255, 110/255, 110/255, 1
                size_hint_y: .11
                MDFloatLayout:
                    size_hint: .8, .75
                    pos_hint: {"center_x": .43, "center_y": .5}
                    canvas:
                        Color:
                            rgb: (238/255, 238/255, 238/255, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [23, 23, 23, 23]
                    TextInput:
                        id: text_input
                        hint_text: "Введіть своє повідомлення..."
                        size_hint: 1, None
                        pos_hint: {"center_x": .5, "center_y": .5}
                        font_size: "18sp"
                        height: self.minimum_height
                        multiline: False
                        cursor_color: 1, 170/255, 23/255, 1
                        cursor_width: "2sp"
                        foreground_color: 1, 170/255, 23/255, 1
                        background_color: 0,0,0,0
                        padding: 15
                        font_name: "Clearsan"
                MDIconButton:
                    icon: "send"
                    pos_hint: {"center_x": .91, "center_y": .5}
                    user_font_size: "18sp"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: 1, 170/255, 23/255, 1
                    on_release: root.send()