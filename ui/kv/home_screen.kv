<HomeScreen>:
    MDScreen:
        md_bg_color: 0.258, 0.576, 0.847, 1

        BoxLayout:
            orientation: 'vertical'

            # Верхняя панель с иконкой
            BoxLayout:
                size_hint_y: None
                height: dp(56)
                padding: dp(8)
                MDIconButton:
                    icon: "fire"
                    theme_icon_color: "Custom"
                    icon_color: 0.847, 0.208, 0.329, 1
                    #on_release:
                Widget:
                    size_hint_x: None
                    width: dp(16)

            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

                    # Добавьте ваши виджеты сюда
                    MDLabel:
                        text: "Welcome to the Home Screen"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                    MDLabel:
                        text: "Scroll down for more content"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                    # Пример заполнения содержимым
                    Widget:
                        size_hint_y: None
                        height: 500

                    MDLabel:
                        text: "End of the content"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
