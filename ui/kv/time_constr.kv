<TimeConstructionsScreen>:
    name: 'time_c'
    MDScreen:
        md_bg_color: 28/255, 140/255, 140/255, 1

        FloatLayout:
            # Скролл с карточками
            MDScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height  # Установите высоту на основе содержимого
                    padding: [dp(30), dp(50), dp(30), dp(30)]  # Отступы для всего содержимого
                    spacing: dp(40)  # Расстояние между карточками

                    # Карточки с текстом
                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Present Simple"
                        on_press: app.root.current = 'present_simple'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Present Continuous"
                        on_press: app.root.current = 'present_continuous'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Present Perfect "
                        on_press: app.root.current = 'present_perfect'
                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Present Perfect Continuous"
                        on_press: app.root.current = 'present_perfect_continuous'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Past Simple"
                        on_press: app.root.current = 'past_simple'

                    SpecCard: #1
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Past Continuous"
                        on_press: app.root.current = 'past_continuous'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Past Perfect"
                        on_press: app.root.current = 'past_perfect'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Past Perfect Continuous"
                        on_press: app.root.current = 'past_perfect_continuous'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Future Simple"
                        on_press: app.root.current = 'future_simple'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Future Continuous"
                        on_press: app.root.current = 'future_continuous'

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Future Perfect"

                    SpecCard:
                        size_hint: None, None
                        size: dp(300), dp(50)
                        text: "Future Perfect Continuous"

            # Кнопка возврата
            MDIconButton:
                icon: 'arrow-left'
                pos_hint: {"x": 0, "top": 1}  # Левый верхний угол
                size_hint: None, None
                size: dp(56), dp(56)  # Размер кнопки возврата
                on_release: app.change_screen_item('main')  # Переход на TasksScreen








