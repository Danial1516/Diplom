<PictureScreen>
    name: "picture_screen"
    MDScreen:
        md_bg_color: 28/255, 140/255, 140/255, 1

        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(20), dp(40), dp(20), dp(30)]
                spacing: dp(50)
                pos_hint: {"top": 1}

                MDCard:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(90)
                    md_bg_color: 173/255, 216/255, 230/255, 1
                    radius: [15, 15, 15, 15]
                    pos_hint: {"top": 0.95}

                    MDLabel:
                        text: "Виберіть Категорію"
                        font_name: "juneg"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_size: sp(24)

                MDGridLayout:
                    cols: 2
                    size_hint: (None, None)  # Отключаем автоматическое определение размера
                    width: self.minimum_width  # Задаем ширину по минимальному размеру
                    height: self.minimum_height  # Задаем высоту по минимальному размеру
                    row_default_height: dp(100)  # Высота строк
                    row_force_default: True  # Принудительно использовать заданную высоту строк
                    spacing: dp(30)
                    pos_hint: {"center_x": 0.5}  # Выровнять по центру экрана
                    padding: [dp(10), dp(10), dp(10), dp(10)]

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('1')

                        Image:
                            source:'assets/images/travel.png'

                        MDLabel:
                            text: "Подорож"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('2')

                        Image:
                            source:'assets/images/hobby.png'

                        MDLabel:
                            text: "Хобі"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('3')

                        Image:
                            source:'assets/images/graduation.png'

                        MDLabel:
                            text: "Освіта"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('4')

                        Image:
                            source:'assets/images/art.png'

                        MDLabel:
                            text: "Мистецтво"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('5')

                        Image:
                            source:'assets/images/animals.png'

                        MDLabel:
                            text: "Тварини"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(120)
                        elevation: 2
                        md_bg_color: 200/255, 255/255, 200/255, 1
                        radius: [15, 15, 15, 15]
                        padding: dp(10)
                        on_release: root.set_category('6')

                        Image:
                            source:'assets/images/food.png'

                        MDLabel:
                            text: "Їжа"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {"x": 0, "top": 1}
            size_hint: None, None
            size: dp(56), dp(56)
            on_release: app.change_screen_item('main')
