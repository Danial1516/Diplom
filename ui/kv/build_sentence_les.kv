<BuildSentenceLessonScreen>:
    name: 'build_sentence_lesson'
    MDScreen:
        md_bg_color: 28/255, 140/255, 140/255, 1
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(20), dp(40), dp(20), dp(30)]
                spacing: dp(50)
                pos_hint: {"top": 1}

                MDCard:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(90)
                    md_bg_color: 173/255, 216/255, 230/255, 1
                    radius: [15, 15, 15, 15]
                    pos_hint: {"top": 0.95}

                    MDLabel:
                        text: "Складіть почуте речення"
                        font_name: "juneg"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_size: sp(24)

                MDCard:
                    orientation: 'horizontal'
                    size_hint_x: 0.5
                    size_hint_y: None
                    elevation: 1
                    md_bg_color: 255/255, 225/255, 158/255, 1
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.5, "y": 0.45}
                    padding: "8dp"
                    spacing: "8dp"

                    MDIcon:
                        icon: 'play'

                    MDLabel:
                        text: 'Прослухати'
                        valign: 'middle'
                        halign: "center"





    MDIconButton:
        icon: 'arrow-left'
        pos_hint: {"x": 0, "top": 1}
        size_hint: None, None
        size: dp(56), dp(56)
        on_release: app.root.current = 'build_sentence'


<WrapLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<CustMDCard>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    md_bg_color: 245/255, 245/255, 220/255, 1
    padding: dp(10)
    radius: [15, 15, 15, 15]

    WrapLayout:
        id: words_box
        orientation: 'horizontal'
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height