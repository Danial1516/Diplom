<BuildSentenceLessonScreen>:
    name: 'build_sentence_lesson'
    MDScreen:
        md_bg_color: 28/255, 140/255, 140/255, 1
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(20), dp(40), dp(20), dp(0)]
                spacing: dp(30)
                pos_hint: {"top": 1}

                MDCard:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(90)
                    md_bg_color: 173/255, 216/255, 230/255, 1
                    radius: [15, 15, 15, 15]
                    pos_hint: {"top": 0.95}

                    MDLabel:
                        text: "Складіть почуте речення"
                        font_name: "juneg"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_size: sp(24)

                MDCard:
                    orientation: 'horizontal'
                    size_hint_x: 0.5
                    size_hint_y: None
                    elevation: 1
                    md_bg_color: 255/255, 225/255, 158/255, 1
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.5, "y": 0.45}
                    padding: "8dp"
                    spacing: "8dp"
                    on_release: root.speak_sentence()

                    MDIcon:
                        icon: 'play'

                    MDLabel:
                        text: 'Прослухати'
                        valign: 'middle'
                        halign: "center"

                # Контейнер для отображения собранного предложения
                MDBoxLayout:
                    id: sentence_container
                    orientation: 'horizontal'
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(10)
                    adaptive_height: True

                BoxLayout:
                    id: sentence_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(5)

                # Контейнер для динамических карточек
                MDGridLayout:
                    id: cards_container
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"top": 1}
                    adaptive_height: True


    MDIconButton:
        icon: 'arrow-left'
        pos_hint: {"x": 0, "top": 1}
        size_hint: None, None
        size: dp(56), dp(56)
        on_release: app.root.current = 'build_sentence'