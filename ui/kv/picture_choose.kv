<PictureChooseScreen>
    name: "picture_choose_screen"
    MDScreen:
        md_bg_color: 28/255, 140/255, 140/255, 1
        FloatLayout:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: [dp(20), dp(40), dp(20), dp(30)]
                spacing: dp(20)
                pos_hint: {"top": 1}

                MDCard:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(70)
                    md_bg_color: 173/255, 216/255, 230/255, 1
                    radius: [15, 15, 15, 15]
                    pos_hint: {"top": 0.95}

                    MDLabel:
                        text: "Виберіть зображення з правильним підписом"
                        font_name: "juneg"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_size: sp(22)


                MDGridLayout:
                    cols: 2
                    size_hint: (None, None)  # Отключаем автоматическое определение размера
                    width: self.minimum_width  # Задаем ширину по минимальному размеру
                    height: self.minimum_height  # Задаем высоту по минимальному размеру
                    row_default_height: dp(200)  # Высота строк
                    row_force_default: True  # Принудительно использовать заданную высоту строк
                    spacing: dp(30)
                    pos_hint: {"center_x": 0.5}  # Выровнять по центру экрана
                    padding: [dp(10), dp(10), dp(10), dp(10)]

                    MDCard:
                        id: card1
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(150)
                        elevation: 2
                        md_bg_color: 240/255, 240/255, 240/255, 1
                        radius: [15, 15, 15, 15]
                        padding: [dp(10), dp(30), dp(10), dp(10)]
                        on_release: root.select_card('card1')

                        Image:
                            id: image1
                            source: 'assets/images/travel.png'
                            size_hint_y: None
                            height: dp(100)
                            pos_hint: {'center_y': 0.5}

                        MDLabel:
                            id: label1
                            text: "Подорож"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)


                    MDCard:
                        id: card2
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(150)
                        elevation: 2
                        md_bg_color: 240/255, 240/255, 240/255, 1
                        radius: [15, 15, 15, 15]
                        padding: [dp(10), dp(30), dp(10), dp(10)]
                        on_release: root.select_card('card2')

                        Image:
                            id: image2
                            source: 'assets/images/hobby.png'
                            size_hint_y: None
                            height: dp(100)
                            pos_hint: {'center_y': 0.5}

                        MDLabel:
                            id: label2
                            text: "Хобі"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        id: card3
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(150)
                        elevation: 2
                        md_bg_color: 240/255, 240/255, 240/255, 1
                        radius: [15, 15, 15, 15]
                        padding: [dp(10), dp(30), dp(10), dp(10)]
                        on_release: root.select_card('card3')

                        Image:
                            id: image3
                            source: 'assets/images/graduation.png'
                            size_hint_y: None
                            height: dp(100)
                            pos_hint: {'center_y': 0.5}

                        MDLabel:
                            id: label3
                            text: "Освіта"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

                    MDCard:
                        id: card4
                        orientation: 'vertical'
                        size_hint_x: None
                        width: dp(150)
                        elevation: 2
                        md_bg_color: 240/255, 240/255, 240/255, 1
                        radius: [15, 15, 15, 15]
                        padding: [dp(10), dp(30), dp(10), dp(10)]
                        on_release: root.select_card('card4')

                        Image:
                            id: image4
                            source: 'assets/images/art.png'
                            size_hint_y: None
                            height: dp(100)
                            pos_hint: {'center_y': 0.5}

                        MDLabel:
                            id: label4
                            text: "Мистецтво"
                            font_name: "Clearsan"
                            halign: "center"
                            theme_text_color: "Primary"
                            font_size: sp(16)

            MDCard:
                id: check_button
                orientation: 'vertical'
                size_hint_y: None
                height: dp(70)
                elevation: 2
                md_bg_color: 255/255, 223/255, 186/255, 1
                radius: [15, 15, 15, 15]
                pos_hint: {"top": 0.10}
                on_release: root.check_selection() if root.ids['check_button'].children[0].text == "Перевірити" else root.next_round()

                MDLabel:
                    text: "Перевірити"
                    font_name: "juneg"
                    halign: "center"
                    theme_text_color: "Primary"
                    font_size: sp(22)

        MDIconButton:
            icon: 'arrow-left'
            pos_hint: {"x": 0, "top": 1}
            size_hint: None, None
            size: dp(56), dp(56)
            on_release: app.root.current = 'picture_screen'
