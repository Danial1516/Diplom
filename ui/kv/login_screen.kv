#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<LoginScreen>:
    name: 'login'
    Image:
        source: 'assets/images/log_scr.jfif'
        size: self.size
        size_hint: 1, 1
        allow_stretch: True
        keep_ratio: False
        canvas.before:
            PushMatrix
            Scale:
                origin: self.center
                x: 1.5
                y: 1.5
                z: 1
            PopMatrix
            Color:
                rgba: (0, 0, 0, 1)  # Полупрозрачный черный цвет для затемнения фона
            Rectangle:
                pos: self.pos
                size: self.size
    MDLabel:
        text: "LangVoyage"
        font_name: "assets/fonts/beer_money.ttf"
        font_size: "48"
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 1)
    MDTextField:
        id: login_email
        icon_right: "email"
        icon_right_color_normal: (1, 1, 1, 1)
        icon_right_color_focus: (0, 0, 0, 0.8)
        hint_text: "Email"
        hint_text_color_focus: (0, 0, 0, 0.8)
        hint_text_color_normal: (1, 1, 1, 1)
        helper_text: "Write your e-mail"
        helper_text_mode: "on_focus"
        helper_text_color_focus: (0, 0, 0, 0.8)
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        size_hint_x: 0.8
        text_color_focus: (0, 0, 0, 0.8)
        line_color_normal: 1, 1, 1, 1
        line_color_focus: 0, 0, 0, 0.8
        text_color_normal: (1, 1, 1, 1)
    MDTextField:
        id: login_password
        icon_right: "key-variant"
        icon_right_color_normal: (1, 1, 1, 1)
        icon_right_color_focus: (0, 0, 0, 0.8)
        hint_text: "Password"
        hint_text_color_focus: (0, 0, 0, 0.8)
        hint_text_color_normal: (1, 1, 1, 1)
        helper_text: "Write your password"
        helper_text_mode: "on_focus"
        helper_text_color_focus: (0, 0, 0, 0.8)
        password: True
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint_x: 0.8
        theme_text_color: "Custom"
        text_color_focus: (0, 0, 0, 0.8)
        line_color_normal: 1, 1, 1, 1
        line_color_focus: 0, 0, 0, 0.8
        text_color_normal: (1, 1, 1, 1)
    MDRaisedButton:
        text: "Login"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        on_release: app.login()
    MDTextButton:
        text: "Don't have an account? Register"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        on_release:
            app.root.transition = FadeTransition()
            app.root.current = 'register'
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 1)
